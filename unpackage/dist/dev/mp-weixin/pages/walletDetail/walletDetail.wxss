  padding: 30rpx 0;
  box-sizing: border-box;
  margin-top: 4rpx;
  border-bottom: 1px solid #F2F2F2;
}
.walletDetail .items .item .left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
