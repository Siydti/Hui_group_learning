.walletDetail .items {
  border-top: 20rpx solid #F2F2F2;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.walletDetail .items .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
