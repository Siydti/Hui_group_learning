page {
  width: 100%;
  min-height: 100%;
  background-color: #F2F2F2;
}
.detailed .navs {
  background-color: #FFFFFF;
  height: 90rpx;
  padding: 0 70rpx;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin-top: 4rpx;
}
.detailed .navs .li {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  position: relative;
  height: 90rpx;
  position: relative;
}
.detailed .navs .li text {
  font-size: 30rpx;
  color: #333333;
}
.detailed .navs .li .line {
  position: absolute;
  bottom: 0;
  width: 0;
  height: 6rpx;
  background: #FFFFFF;
  -webkit-transition: width .2s linear;
  transition: width .2s linear;
}
.detailed .navs .li .num {
  width: 24rpx;
  height: 24rpx;
  background: #FF1E1E;
  border-radius: 50%;
  color: #FFFFFF;
  font-size: 20rpx;
  text-align: center;
  line-height: 24rpx;
  position: absolute;
  right: -16rpx;
  top: 16rpx;
}
.detailed .navs .active text {
  color: #47B4B7;
}
.detailed .navs .active .line {
  background: #47B4B7;
  width: 100rpx;
}
.detailed .items .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  background: #FFFFFF;
  padding: 30rpx;
  box-sizing: border-box;
  margin-top: 4rpx;
}
.detailed .items .item .left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 0;
}
.detailed .items .item .left image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.detailed .items .item .left .r {
  margin-left: 20rpx;
}
.detailed .items .item .left .r .name {
  font-size: 30rpx;
  color: #343434;
}
.detailed .items .item .left .r .text {
  font-size: 24rpx;
  color: #9A9A9A;
  padding-top: 10rpx;
}
.detailed .items .item .right {
  font-size: 36rpx;
