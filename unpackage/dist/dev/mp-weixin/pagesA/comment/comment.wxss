page {
  width: 100%;
  height: 100%;
}
.comment {
  width: 100%;
  height: 100%;
}
.comment .type {
  padding: 30rpx;
}
.comment .type .list {
  display: inline-block;
  background-color: #f4f4f4;
  padding: 14rpx 26rpx;
  margin-right: 10rpx;
  margin-bottom: 16rpx;
  border-radius: 50rpx;
  font-size: 22rpx;
}
.comment .type .active {
  background-color: #fcf0eb;
  color: #e84e16;
}
.comment .partition {
  background-color: #f6f6f6;
  width: 100%;
}
.comment .main {
  padding: 20rpx 40rpx;
  padding-bottom: 0;
}
.comment .main .list .head {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.comment .main .list .head .left {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  position: relative;
}
.comment .main .list .head .right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  height: 80rpx;
}
.comment .main .list .head .right .top {
  font-size: 28rpx;
  color: #6e849d;
}
.comment .main .list .head .right .top text {
  display: inline-block;
  background-color: #f0be42;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 20rpx;
  margin-left: 15rpx;
  font-weight: bold;
}
.comment .main .list .head .right .bottom {
  font-size: 20rpx;
  color: #d7d7d7;
}
.comment .main .list .score {
  height: 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.comment .main .list .score text {
  color: #000;
  font-size: 26rpx;
  margin-right: 15rpx;
}
.comment .main .list .content {
  padding-top: 30rpx;
  overflow: hidden;
  font-size: 26rpx;
  line-height: 40rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.comment .main .list .active {
  -webkit-line-clamp: 5;
}
.comment .isOpenbtn {
  color: #6e849d;
  font-size: 26rpx;
  line-height: 40rpx;
}
.comment .picture {
  width: 100%;
  border-radius: 20rpx 20rpx 50rpx 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  overflow: hidden;
}

