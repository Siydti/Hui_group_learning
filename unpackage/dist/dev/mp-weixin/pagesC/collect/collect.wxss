page {
  width: 100%;
  height: 100%;
}
.collect {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  padding-top: 4rpx;
}
.collect .list {
  width: 670rpx;
  height: 203rpx;
  background-color: #fff;
  padding: 20rpx 40rpx ;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 4rpx;
}
.collect .list .main {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.collect .list .main .title {
  color: #333333;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.collect .list .main .type {
  color: #999999;
  font-size: 22rpx;
}
.collect .list .main .topBox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.collect .list .main .topBox .left .price {
  color: #333333;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.collect .list .main .topBox .left .site {
  color: #999999;
  font-size: 20rpx;
}
.collect .list .main .topBox .right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #666666;
  font-size: 20rpx;
}
.collect .list .main .topBox .right van-icon {
  margin-right: 10rpx;
  font-size: 28rpx;
}
.collect .list .main .bottomBox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.collect .list .main .bottomBox .left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
          align-items: flex-end;
}
.collect .list .main .bottomBox .left .new_price {
  color: #FF6634;
  font-size: 24rpx;
  margin-right: 14rpx;
}
.collect .list .main .bottomBox .left .old_price {
  color: #999999;
  text-decoration: line-through;
  font-size: 18rpx;
  margin-right: 10rpx;
}
.collect .list .main .bottomBox .left .discount {
  position: relative;
  width: 64rpx;
  height: 20rpx;
}
.collect .list .main .bottomBox .left .discount image {
  position: absolute;
  top: 0;
  left: 0;
}
.collect .list .main .bottomBox .left .discount text {
  position: absolute;
  display: inline-block;
  width: 44rpx;
  height: 20rpx;
  top: 0;
  left: 16rpx;
  color: #fff;
  line-height: 20rpx;
  text-align: center;
  font-size: 18rpx;
}
.collect .list .main .bottomBox .right {
  color: #666666;
  font-size: 22rpx;
}

